<h1>Listing servers</h1>

<table>
  <tr>
    <th>Server use</th>
    <th>Server name</th>
    <th>Server alias</th>
    <th>Server address</th>
    <th>Hostgroup</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.server_use %></td>
    <td><%= server.server_name %></td>
    <td><%= server.server_alias %></td>
    <td><%= server.server_address %></td>
    <td><%= server.hostgroup_id %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

